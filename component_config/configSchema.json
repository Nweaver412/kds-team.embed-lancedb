{
  "type": "object",
  "title": "Lance Embedder",
  "required": [
    "embedColumn",
    "#apiKey",
    "model",
    "outputFormat",
    "destination"
  ],
  "properties": {
    "_metadata_": {
      "type": "object",
      "options": { "hidden": true },
      "properties": {
        "table": {
          "type": "object",
          "properties": {
            "id": { "type": "string" },
            "name": { "type": "string" },
            "columns": { "type": "array" },
            "primaryKey": { "type": "array" }
          }
        }
      }
    },
    "model": {
      "enum": [
        "small_03",
        "large_03",
        "ada_002"
      ],
      "type": "string",
      "title": "Embedding model",
      "default": "small_03",
      "options": {
        "enum_titles": [
          "text-embedding-3-small",
          "text-embedding-3-large",
          "text-embedding-ada-002"
        ]
      },
      "propertyOrder": 4
    },
    "#apiKey": {
      "type": "string",
      "title": "OpenAI API Key",
      "format": "password",
      "default": "",
      "minLength": 1,
      "description": "API Key for embedding model",
      "propertyOrder": 3
    },
    "embedColumn": {
      "type": "string",
      "title": "Column to Embed",
      "default": "",
      "minLength": 1,
      "description": "Column to be embedded by chosen function",
      "propertyOrder": 1,
      "watch": {
        "columns": "_metadata_.table.columns"
      },
      "enumSource": "columns"
    },
    "outputFormat": {
      "enum": [
        "csv",
        "lance"
      ],
      "type": "string",
      "title": "Output Format",
      "default": "csv",
      "options": {
        "enum_titles": [
          "CSV",
          "Lance"
        ]
      },
      "description": "Choose the output format for the embeddings",
      "propertyOrder": 5
    },
    "destination": {
      "title": "Destination",
      "type": "object",
      "required": [
        "output_table_name"
      ],
      "properties": {
        "output_table_name": {
          "type": "string",
          "title": "Storage Name",
          "description": "Name of the table or file stored in Storage.",
          "propertyOrder": 2
        }
      }
    }
  }
}